<div class="spati-card login-form-card">
  <h2 class="form-heading">Willkommen zur√ºck</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.input :email, required: false, autofocus: true,
          input_html: { autocomplete: "email", class: "login-field", placeholder: "E-Mail" },
          label: false %>

      <%= f.input :password, required: false,
          input_html: { autocomplete: "current-password", class: "login-field", placeholder: "Passwort" },
          label: false %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "LOGIN", class: "btn login-button" %>
    </div>
  <% end %>

  <div class="login-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
