<div class="spati-card story-form-card">
  <h2 class="form-heading">Ey, ein Späti fehlt!</h2>

  <%= simple_form_for(@spati, html: { multipart: true }) do |form| %>
    <div class="form-group">
      <%= form.input :name, label: false, placeholder: "Name des Spätis", input_html: { class: "story-textarea" } %>
    </div>

    <div class="form-group">
      <%= form.input :address, label: false, placeholder: "Adresse", input_html: { class: "story-textarea" } %>
    </div>

    <div class="form-group">
      <%= form.input :always_open, as: :boolean, label: "24/7 geöffnet" %>
    </div>

    <div id="opening-times-fields">
      <% %w[Mo Di Mi Do Fr Sa So].each do |day| %>
        <div class="form-group">
          <%= label_tag "opening_times_#{day}", "#{day}:", class: "form-label" %>
          <%= text_field_tag "opening_times[#{day}]", nil, placeholder: "z. B. 07:00–23:00", class: "story-textarea" %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.input :photos, as: :file, input_html: { multiple: true }, label: "Fotos vom Späti" %>
    </div>

    <%= form.submit "Späti hinzufügen", class: "btn abschicken-button" %>
  <% end %>
</div>
</div>

<div class="unten">
  <%= link_to spatis_path, class: "btn späti-button" do %>
    zurück zur Übersicht
  <% end %>
</div>
