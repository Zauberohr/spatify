<div class="spati-card login-form-card">
  <h2 class="form-heading">Registrier dir'n Account</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-group">
      <%= f.input :email,
          required: true,
          autofocus: true,
          label: false,
          input_html: { class: "login-field", placeholder: "E-Mail" } %>

      <%= f.input :password,
          required: true,
          label: false,
          input_html: { class: "login-field", placeholder: "Passwort" } %>

      <%= f.input :password_confirmation,
          required: true,
          label: false,
          input_html: { class: "login-field", placeholder: "Passwort bestÃ¤tigen" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Registrieren", class: "btn login-button" %>
    </div>
  <% end %>

  <div class="login-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
